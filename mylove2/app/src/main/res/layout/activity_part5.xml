<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Part5Activity">

    <TextView
        android:id="@+id/tv_part5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Independentemente da escolha que você fez, você finalmente encontra o tesouro mágico..."
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_option_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Opção A" />

    <Button
        android:id="@+id/button_option_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Opção B" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_marginTop="16dp" />
</LinearLayout>